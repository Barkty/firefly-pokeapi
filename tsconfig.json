{
  "ts-node": { "files": true },
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node"],
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "*",
    "typeRoots": ["./request.d.ts", "./node_modules/@types"],
  },
  "exclude": ["node_modules","dist", "tests/**/*", "**/*spec.ts", "newrelic.js", "src/shared/logger/index.ts"],
  "include": ["./src/**/*.ts", "./request.d.ts",  "./.eslintrc.json"]
}